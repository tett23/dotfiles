{
  "editor.wordWrap": "on",
  "editor.minimap.enabled": false,
  "editor.tabSize": 2,
  "editor.renderLineHighlight": "all",
  "editor.autoClosingBrackets": "always",
  "editor.autoIndent": "advanced",
  "editor.renderWhitespace": "all",
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "editor.formatOnType": false,
  "editor.unicodeHighlight.ambiguousCharacters": false,
  "editor.unicodeHighlight.invisibleCharacters": true,
  "editor.inlineSuggest.enabled": true,
  "editor.inlineSuggest.showToolbar": "always",
  "editor.suggest.showReferences": true,

  "terminal.integrated.macOptionClickForcesSelection": true,
  "terminal.integrated.showExitAlert": false,

  "diffEditor.renderSideBySide": false,
  "diffEditor.ignoreTrimWhitespace": true,
  "workbench.editor.showTabs": "multiple",
  "workbench.editor.enablePreview": false,
  "workbench.editor.enablePreviewFromQuickOpen": false,
  "workbench.editor.tabSizing": "shrink",
  "workbench.colorTheme": "ktrz-monokai",
  "workbench.startupEditor": "none",

  "files.autoSave": "afterDelay",
  "files.insertFinalNewline": true,
  "files.trimTrailingWhitespace": true,

  "prettier.trailingComma": "all",
  "prettier.singleQuote": true,
  "prettier.arrowParens": "always",

  "vim.useSystemClipboard": true,
  "vim.surround": true,

  "explorer.autoReveal": false,

  "search.useIgnoreFiles": true,
  "search.useGlobalIgnoreFiles": true,
  "search.exclude": {
    // haskellのビルドしたファイルを非表示にする
    "**/*.hi": { "when": "$(basename).hs" },
    "**/*.o": { "when": "$(basename).hs" }
  },
  "files.exclude": {
    // haskellのビルドしたファイルを非表示にする
    "**/*.hi": { "when": "$(basename).hs" },
    "**/*.o": { "when": "$(basename).hs" }
  },

  "[go]": {
    "editor.snippetSuggestions": "none",
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.organizeImports": "explicit"
    }
  },
  "go.useLanguageServer": true,
  "go.alternateTools": {
    "go-langserver": "gopls"
  },
  "go.languageServerExperimentalFeatures": {
    "format": true,
    "autoComplete": true,
    "rename": true,
    "goToDefinition": true,
    "hover": true,
    "signatureHelp": true,
    "goToTypeDefinition": true,
    "goToImplementation": true,
    "documentSymbols": true,
    "workspaceSymbols": true,
    "findReferences": true,
    "diagnostics": true
  },
  "go.testFlags": ["-v"],
  "go.testEnvVars": {
    "GO_ENV": "test"
  },

  "[rust]": {
    "editor.formatOnSave": true,
    "editor.tabSize": 4,
    "editor.defaultFormatter": "rust-lang.rust-analyzer"
  },
  "rust-analyzer.cargo.autoreload": true,
  "rust-analyzer.procMacro.enable": true,
  "rust-analyzer.cargo.buildScripts.enable": true,
  "rust-analyzer.cargo.features": "all",
  "rust-analyzer.check.command": "clippy",
  "pestIdeTools.alwaysUsedRuleNames": ["ws", "br"],

  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true,
    "editor.formatOnType": false
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true,
    "editor.formatOnType": false
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true,
    "editor.formatOnType": false
  },
  "javascript.updateImportsOnFileMove.enabled": "always",
  "typescript.updateImportsOnFileMove.enabled": "always",
  "eslint.run": "onSave",
  "emmet.showExpandedAbbreviation": "never",

  "[ruby]": {
    "editor.formatOnSave": true,
    "editor.formatOnType": false,
    "editor.defaultFormatter": "Shopify.ruby-lsp"
  },

  // swift
  "sourcekit-lsp.serverPath": "/Users/tett23/repositories/src/github.com/apple/sourcekit-lsp/.build/release/sourcekit-lsp",
  "sourcekit-lsp.toolchainPath": "/Applications/Xcode.app/Contents/Developer/Toolchains/XcodeDefault.xctoolchain/usr/bin/swift",

  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[markdown]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[terraform]": {
    "editor.defaultFormatter": "hashicorp.terraform"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[makefile]": {
    "editor.insertSpaces": false
  },
  "[toml]": {
    "editor.defaultFormatter": "bodil.prettier-toml"
  },

  // haskell
  "haskell.formattingProvider": "ormolu",
  "haskell.serverEnvironment": { "PATH": "${HOME}/.ghcup/bin:${PATH}" },
  "haskell.manageHLS": "GHCup",
  "haskell.toolchain": {
    "ghcup": "latest",
    "stack": "latest",
    "ghc": "latest",
    "hls": "latest"
  },
  "[haskell]": {
    "editor.defaultFormatter": "sjurmillidahl.ormolu-vscode",
    "editor.formatOnSave": true
  },

  "[elm]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "elmTooling.elm-ls-vscode"
  },

  // drawio
  "hediet.vscode-drawio.local-storage": "",
  "git.openRepositoryInParentFolders": "never",
  "github.copilot.enable": {
    "*": true,
    "yaml": false,
    "plaintext": true,
    "markdown": false,
    "mdx": false,
    "md": false
  },
  "go.toolsManagement.autoUpdate": true
}
