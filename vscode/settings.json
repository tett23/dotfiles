{
  "editor.wordWrap": "on",
  "editor.minimap.enabled": false,
  "editor.tabSize": 2,
  "editor.renderLineHighlight": "all",
  "editor.autoClosingBrackets": "always",
  "editor.autoIndent": "advanced",
  "editor.renderWhitespace": "all",
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "editor.formatOnType": false,
  "editor.unicodeHighlight.ambiguousCharacters": false,
  "editor.unicodeHighlight.invisibleCharacters": true,
  "editor.inlineSuggest.enabled": true,
  "editor.inlineSuggest.showToolbar": "always",
  "editor.suggest.showReferences": true,

  "workbench.editor.enablePreview": false,
  "workbench.colorTheme": "ktrz-monokai",

  "terminal.integrated.macOptionClickForcesSelection": true,
  "terminal.integrated.showExitAlert": false,

  "diffEditor.renderSideBySide": false,
  "diffEditor.ignoreTrimWhitespace": true,

  "workbench.editor.showTabs": "multiple",
  "workbench.editor.enablePreviewFromQuickOpen": false,
  "workbench.editor.tabSizing": "shrink",
  "workbench.startupEditor": "none",
  "files.autoSave": "onFocusChange",
  "files.insertFinalNewline": true,
  "files.trimTrailingWhitespace": true,
  "files.eol": "\n",
  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/node_modules/*/**": true,
    "**/.hg/store/**": true,
    "**/dist/**": true,
    "**/lib/**": true
  },

  "search.useIgnoreFiles": true,
  "search.useGlobalIgnoreFiles": true,
  "search.followSymlinks": false,
  "search.exclude": {
    // haskellのビルドしたファイルを非表示にする
    "**/*.hi": { "when": "$(basename).hs" },
    "**/*.o": { "when": "$(basename).hs" }
  },
  "files.exclude": {
    // haskellのビルドしたファイルを非表示にする
    "**/*.hi": { "when": "$(basename).hs" },
    "**/*.o": { "when": "$(basename).hs" }
  },

  "prettier.trailingComma": "all",
  "prettier.singleQuote": true,
  "prettier.arrowParens": "always",

  "vim.useSystemClipboard": true,
  "vim.surround": true,
  "vim.easymotion": true,
  "vim.leader": "<space>",
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": ["<leader>", "s"],
      "commands": ["workbench.action.files.save"]
    },
    {
      "before": ["<leader>", "m"],
      "commands": ["workbench.action.minimizeOtherEditors"]
    },
    {
      "before": ["<leader>", "d"],
      "commands": ["editor.action.revealDefinitionAside"]
    },
    {
      "before": ["<leader>", "f"],
      "commands": ["editor.action.revealDefinition"]
    },
    {
      "before": ["<leader>", "g"],
      "commands": ["editor.action.showHover"]
    },
    {
      "before": ["<leader>", "p"],
      "commands": ["problems.action.openToSide"]
    },
    {
      "before": ["<leader>", "s"],
      "commands": ["workbench.action.files.save"]
    },
    {
      "before": ["<leader>", "q"],
      "commands": ["editor.action.quickFix"]
    },
    {
      "before": ["<leader>", "r"],
      "commands": ["editor.action.rename"]
    },
    {
      "before": ["<leader>", "a"],
      "commands": ["editor.action.findReferences"]
    },
    {
      "before": ["<leader>", "w"],
      "commands": ["workbench.action.closeActiveEditor"]
    },
    {
      "before": ["<leader>", "c"],
      "commands": ["editor.action.inlineSuggest.trigger"]
    },
    {
      "before": ["<leader>", "c", "i"],
      "commands": ["github.copilot.interactiveEditor.generate"]
    },
    {
      "before": ["<leader>", "c", "c"],
      "commands": ["github.copilot.generate"]
    },
    {
      "before": ["<leader>", "n"],
      "commands": ["editor.action.marker.next"]
    },
    {
      "before": ["<leader>", "<C-f>"],
      "commands": ["actions.find"]
    },
    {
      "before": ["<leader>", "<C-r>"],
      "commands": ["editor.action.startFindReplaceAction"]
    }
  ],
  "vim.visualModeKeyBindingsNonRecursive": [
    {
      "before": ["<leader>", "q"],
      "commands": ["editor.action.quickFix"]
    },
    {
      "before": ["<leader>", "c"],
      "commands": ["editor.action.inlineSuggest.trigger"]
    }
  ],

  "explorer.autoReveal": false,
  "explorer.excludeGitIgnore": true,

  "[go]": {
    "editor.snippetSuggestions": "none",
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.organizeImports": "explicit"
    }
  },
  "go.useLanguageServer": true,
  "go.alternateTools": {
    "go-langserver": "gopls"
  },
  "go.testFlags": ["-v"],
  "go.testEnvVars": {
    "GO_ENV": "test"
  },
  "go.toolsManagement.autoUpdate": true,

  "[rust]": {
    "editor.formatOnSave": true,
    "editor.tabSize": 4,
    "editor.defaultFormatter": "rust-lang.rust-analyzer"
  },
  "rust-analyzer.cargo.autoreload": true,
  "rust-analyzer.procMacro.enable": true,
  "rust-analyzer.cargo.buildScripts.enable": true,
  "rust-analyzer.cargo.features": "all",
  "rust-analyzer.check.command": "clippy",
  "pestIdeTools.alwaysUsedRuleNames": ["ws", "br"],

  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true,
    "editor.formatOnType": false
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true,
    "editor.formatOnType": false
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true,
    "editor.formatOnType": false
  },
  "javascript.updateImportsOnFileMove.enabled": "always",
  "typescript.updateImportsOnFileMove.enabled": "always",
  "eslint.run": "onSave",
  "emmet.showExpandedAbbreviation": "never",

  "[ruby]": {
    "editor.formatOnSave": true,
    "editor.formatOnType": false,
    "editor.defaultFormatter": "Shopify.ruby-lsp"
  },

  // swift
  "sourcekit-lsp.serverPath": "/Users/tett23/repositories/src/github.com/apple/sourcekit-lsp/.build/release/sourcekit-lsp",
  "sourcekit-lsp.toolchainPath": "/Applications/Xcode.app/Contents/Developer/Toolchains/XcodeDefault.xctoolchain/usr/bin/swift",

  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[markdown]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[terraform]": {
    "editor.defaultFormatter": "hashicorp.terraform"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[makefile]": {
    "editor.insertSpaces": false
  },
  "[toml]": {
    "editor.defaultFormatter": "bodil.prettier-toml"
  },

  // haskell
  "haskell.formattingProvider": "ormolu",
  "haskell.serverEnvironment": { "PATH": "${HOME}/.ghcup/bin:${PATH}" },
  "haskell.manageHLS": "GHCup",
  "haskell.toolchain": {
    "ghcup": "latest",
    "stack": "latest",
    "ghc": "latest",
    "hls": "latest"
  },
  "[haskell]": {
    "editor.defaultFormatter": "sjurmillidahl.ormolu-vscode",
    "editor.formatOnSave": true
  },

  "[elm]": {
    "editor.formatOnSave": true
  },

  // drawio
  "hediet.vscode-drawio.local-storage": "",
  "git.openRepositoryInParentFolders": "never",
  "github.copilot.enable": {
    "*": true,
    "yaml": false,
    "plaintext": true,
    "markdown": false,
    "mdx": false,
    "md": false
  },
  "prisma.showPrismaDataPlatformNotification": false,
  "github.copilot.editor.enableAutoCompletions": true,

  "tailwindCSS.files.exclude": [
    "**/lib",
    "**/dist",
    "**/.git/**",
    "**/node_modules/**",
    "**/.hg/**",
    "**/.svn/**"
  ]
}
