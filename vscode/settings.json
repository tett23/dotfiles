{
  "editor.wordWrap": "on",
  "editor.minimap.enabled": false,
  "editor.tabSize": 2,
  "editor.renderLineHighlight": "all",
  "editor.autoClosingBrackets": "always",
  "editor.autoIndent": "advanced",
  "editor.renderWhitespace": "all",
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "editor.formatOnType": false,
  "editor.unicodeHighlight.ambiguousCharacters": false,
  "editor.unicodeHighlight.invisibleCharacters": true,
  // "editor.unicodeHighlight.allowedLocales": true,
  // "editor.unicodeHighlight.allowedCharacters": { "　": false },
  // "editor.unicodeHighlight.nonBasicASCII": true,

  "terminal.integrated.macOptionClickForcesSelection": true,

  "diffEditor.renderSideBySide": false,
  "diffEditor.ignoreTrimWhitespace": true,
  "workbench.editor.showTabs": true,
  "workbench.editor.enablePreview": false,
  "workbench.editor.enablePreviewFromQuickOpen": false,
  "workbench.editor.tabSizing": "shrink",
  "workbench.colorTheme": "ktrz-monokai",
  "workbench.startupEditor": "none",

  "files.autoSave": "off",
  "files.insertFinalNewline": true,
  "files.trimTrailingWhitespace": true,

  "prettier.trailingComma": "all",
  "prettier.singleQuote": true,
  "prettier.arrowParens": "always",

  "vim.useSystemClipboard": true,
  "vim.surround": true,

  "explorer.autoReveal": false,

  "search.useIgnoreFiles": true,
  "search.useGlobalIgnoreFiles": true,
  "search.exclude": {
    // haskellのビルドしたファイルを非表示にする
    "**/*.hi": { "when": "$(basename).hs" },
    "**/*.o": { "when": "$(basename).hs" }
  },
  "files.exclude": {
    // haskellのビルドしたファイルを非表示にする
    "**/*.hi": { "when": "$(basename).hs" },
    "**/*.o": { "when": "$(basename).hs" }
  },

  "[go]": {
    "editor.snippetSuggestions": "none",
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.organizeImports": true
    }
  },
  "go.useLanguageServer": true,
  "go.alternateTools": {
    "go-langserver": "gopls"
  },
  "go.languageServerExperimentalFeatures": {
    "format": true,
    "autoComplete": true,
    "rename": true,
    "goToDefinition": true,
    "hover": true,
    "signatureHelp": true,
    "goToTypeDefinition": true,
    "goToImplementation": true,
    "documentSymbols": true,
    "workspaceSymbols": true,
    "findReferences": true,
    "diagnostics": true
  },
  "go.testFlags": ["-v"],
  "go.testEnvVars": {
    "GO_ENV": "test"
  },

  "[rust]": {
    "editor.formatOnSave": true,
    "editor.tabSize": 4,
    "editor.defaultFormatter": "rust-lang.rust-analyzer"
  },
  "rust-analyzer.cargo.allFeatures": true,
  "rust-analyzer.cargo.autoreload": false,
  "rust-analyzer.updates.askBeforeDownload": false,
  "rust-analyzer.updates.channel": "nightly",
  "rust-analyzer.procMacro.enable": false,
  "rust-analyzer.cargo.buildScripts.enable": true,

  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true,
    "editor.formatOnType": false
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true,
    "editor.formatOnType": false
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true,
    "editor.formatOnType": false
  },
  "javascript.updateImportsOnFileMove.enabled": "always",
  "typescript.updateImportsOnFileMove.enabled": "always",
  "eslint.alwaysShowStatus": true,
  "eslint.run": "onSave",
  "eslint.packageManager": "yarn",
  "emmet.showExpandedAbbreviation": "never",

  "[ruby]": {
    // "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true,
    "editor.formatOnType": false,
    "editor.defaultFormatter": "misogi.ruby-rubocop"
  },
  // "ruby.rubocop.executePath": "",
  "ruby.format": "rubocop",
  "ruby.lint": { "rubocop": true },

  // swift
  "sourcekit-lsp.serverPath": "/Users/tett23/repositories/src/github.com/apple/sourcekit-lsp/.build/release/sourcekit-lsp",
  "sourcekit-lsp.toolchainPath": "/Applications/Xcode.app/Contents/Developer/Toolchains/XcodeDefault.xctoolchain/usr/bin/swift",

  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[markdown]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[terraform]": {
    "editor.defaultFormatter": "hashicorp.terraform"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[makefile]": {
    "editor.insertSpaces": false
  },
  "[toml]": {
    "editor.defaultFormatter": "bodil.prettier-toml"
  },

  // haskell
  // "haskell.ghcupExecutablePath": "/Users/tett23/.ghcup/bin/ghcup",
  // "haskell.serverExecutablePath": "~/.ghcup/bin/haskell-language-server-9.0.2",
  "haskell.formattingProvider": "stylish-haskell",
  // "haskell.formattingProvider": "ormolu",
  // "haskell.serverEnvironment": {
  //   "PATH": "${HOME}/.ghcup/bin:$PATH"
  // },
  "haskell.ghcupExecutablePath": "~/.ghcup/bin/ghcup",
  "haskell.manageHLS": "GHCup",
  "haskell.toolchain": {
    "ghc": "9.2.4",
    "hls": "latest",
    "cabal": "recommended",
    "stack": "recommended"
  },
  "[haskell]": {
    // "editor.tabSize": 2,
    "editor.defaultFormatter": "vigoo.stylish-haskell",
    "editor.formatOnSave": true
  },

  "[elm]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "elmTooling.elm-ls-vscode"
  },

  // drawio
  "hediet.vscode-drawio.local-storage": ""
}
