// Place your key bindings in this file to overwrite the defaults
[
  // disable defaults
  {
    "key": "cmd+r",
    "command": "-workbench.action.reloadWindow",
    "when": "isDevelopment"
  },
  {
    "key": "cmd+shift+n",
    "command": "-workbench.action.newWindow"
  },
  {
    "key": "ctrl+q",
    "command": "-workbench.action.quickOpenView"
  },
  {
    "key": "cmd+l",
    "command": "-expandLineSelection",
    "when": "textInputFocus"
  },
  {
    "key": "cmd+i",
    "command": "-focusSuggestion",
    "when": "suggestWidgetVisible && textInputFocus && !suggestWidgetHasFocusedSuggestion"
  },
  {
    "key": "ctrl+p",
    "command": "-workbench.action.quickOpen",
    "when": "terminalFocus"
  },

  {
    "key": "ctrl+k",
    "command": "editor.action.commentLine"
  },
  {
    "key": "ctrl+shift+l",
    "command": "workbench.view.explorer"
  },
  {
    "key": "ctrl+shift+l",
    "command": "workbench.action.closeSidebar",
    "when": "explorerViewletVisible && !inputFocus"
  },
  {
    "key": "n",
    "command": "explorer.newFile",
    "when": "explorerViewletFocus && explorerViewletVisible && !inputFocus"
  },
  {
    "key": "f",
    "command": "explorer.newFolder",
    "when": "explorerViewletFocus && explorerViewletVisible && !inputFocus"
  },
  {
    "key": "r",
    "command": "renameFile",
    "when": "explorerViewletFocus && explorerViewletVisible && !inputFocus"
  },
  {
    "key": "d",
    "command": "deleteFile",
    "when": "explorerViewletFocus && explorerViewletVisible && !inputFocus"
  },
  {
    "key": "j",
    "command": "list.focusDown",
    "when": "explorerViewletFocus && explorerViewletVisible && !inputFocus"
  },
  {
    "key": "k",
    "command": "list.focusUp",
    "when": "explorerViewletFocus && explorerViewletVisible && !inputFocus"
  },
  {
    "key": "h",
    "command": "list.collapse",
    "when": "explorerViewletFocus && explorerViewletVisible && !inputFocus"
  },
  {
    "key": "l",
    "command": "list.expand",
    "when": "explorerViewletFocus && explorerViewletVisible && !inputFocus"
  },
  {
    "key": "enter",
    "command": "explorer.openToSide",
    "when": "explorerViewletFocus && explorerViewletVisible && !inputFocus"
  },

  {
    "key": "ctrl+n",
    "command": "editor.action.marker.next",
    "when": "editorTextFocus && markersNavigationVisible"
  },
  {
    "key": "ctrl+p",
    "command": "editor.action.marker.prev",
    "when": "editorTextFocus && markersNavigationVisible"
  },
  {
    "key": "ctrl+e",
    "command": "closeMarkersNavigation",
    "when": "editorTextFocus && markersNavigationVisible"
  },
  {
    "key": "ctrl+p",
    "command": "workbench.action.quickOpen",
    "when": "editorTextFocus && !suggestWidgetVisible && !inlineSuggestionVisible && !markersNavigationVisible"
  },
  {
    "key": "ctrl+p",
    "command": "workbench.action.switchWindow",
    "when": "inQuickOpen"
  },
  {
    "key": "ctrl+n",
    "command": "editor.action.triggerSuggest",
    "when": "textInputFocus && !suggestWidgetVisible && !markersNavigationVisible"
  },
  {
    "key": "ctrl+p",
    "command": "selectPrevSuggestion",
    "when": "suggestWidgetVisible && !inlineSuggestionVisible && !markersNavigationVisible"
  },
  {
    "key": "ctrl+n",
    "command": "selectNextSuggestion",
    "when": "suggestWidgetVisible && !inlineSuggestionVisible && !markersNavigationVisible"
  },
  {
    "key": "ctrl+e",
    "command": "hideSuggestWidget",
    "when": "suggestWidgetVisible"
  },
  {
    "key": "left",
    "command": "editor.action.inlineSuggest.showNext",
    "when": "suggestWidgetVisible && textInputFocus"
  },
  {
    "key": "right",
    "command": "editor.action.inlineSuggest.showPrevious",
    "when": "suggestWidgetVisible && textInputFocus"
  },
  {
    "key": "tab",
    "command": "editor.action.inlineSuggest.commit",
    "when": "inlineSuggestionVisible && textInputFocus"
  },
  {
    "key": "ctrl+n",
    "command": "editor.action.inlineSuggest.showNext",
    "when": "!suggestWidgetVisible && inlineSuggestionVisible"
  },
  {
    "key": "ctrl+p",
    "command": "editor.action.inlineSuggest.showPrevious",
    "when": "!suggestWidgetVisible && inlineSuggestionVisible"
  },
  {
    "key": "ctrl+e",
    "command": "editor.action.inlineSuggest.hide",
    "when": "inlineSuggestionVisible && textInputFocus"
  },
  {
    "key": "ctrl+y",
    "command": "terminal.focus"
  },
  {
    "key": "ctrl+y",
    "command": "workbench.action.focusActiveEditorGroup",
    "when": "terminalFocus"
  },

  {
    "key": "ctrl+e",
    "command": "editor.action.escapeFocusHover",
    "when": "editorHoverFocused"
  },
  {
    "key": "ctrl+e",
    "command": "editor.action.inlineSuggest.trigger",
    "when": "editorTextFocus && vim.active && !inDebugRepl && vim.mode == 'Insert' && config.github.copilot.inlineSuggest.enable && !editorHasSelection && !inlineSuggestionVisible && !suggestWidgetVisible && !markersNavigationVisible"
  },

  {
    "key": "ctrl+shift+f",
    "command": "editor.action.startFindReplaceAction",
    "when": "editorFocus || editorIsOpen"
  },

  {
    "key": "tab",
    "command": "tab",
    "when": "editorTextFocus && !editorReadonly && !inlineSuggestionVisible && !suggestWidgetVisible && vim.mode == 'Insert'"
  },
  {
    "key": "ctrl+e",
    "command": "-cursorLineEnd",
    "when": "textInputFocus"
  },
  {
    "key": "escape",
    "command": "-editor.action.inlineSuggest.hide",
    "when": "inlineSuggestionVisible"
  },
  {
    "key": "escape",
    "command": "-editor.action.escapeFocusHover",
    "when": "editorHoverFocused"
  },
  {
    "key": "ctrl+w",
    "command": "-workbench.action.switchWindow"
  },
  {
    "key": "alt+cmd+f",
    "command": "-editor.action.startFindReplaceAction",
    "when": "editorFocus || editorIsOpen"
  },
  {
    "key": "ctrl+o",
    "command": "-lineBreakInsert",
    "when": "textInputFocus && !editorReadonly"
  }
]
