// Place your key bindings in this file to overwrite the defaults
[
  // disable defaults
  {
    "key": "cmd+r",
    "command": "-workbench.action.reloadWindow",
    "when": "isDevelopment"
  },
  {
    "key": "cmd+shift+n",
    "command": "-workbench.action.newWindow"
  },
  {
    "key": "ctrl+q",
    "command": "-workbench.action.quickOpenView"
  },
  {
    "key": "cmd+l",
    "command": "-expandLineSelection",
    "when": "textInputFocus"
  },
  {
    "key": "cmd+i",
    "command": "-focusSuggestion",
    "when": "suggestWidgetVisible && textInputFocus && !suggestWidgetHasFocusedSuggestion"
  },

  {
    "key": "ctrl+k",
    "command": "editor.action.commentLine"
  },
  {
    "key": "ctrl+shift+n",
    "command": "editor.action.marker.next",
    "when": "editorTextFocus"
  },
  {
    "key": "ctrl+shift+p",
    "command": "editor.action.marker.prev",
    "when": "editorTextFocus"
  },

  {
    "key": "ctrl+p",
    "command": "workbench.action.quickOpen",
    "when": "editorTextFocus"
  },
  {
    "key": "ctrl+p",
    "command": "workbench.action.switchWindow",
    "when": "inQuickOpen"
  },
  {
    "key": "ctrl+o",
    "command": "workbench.action.gotoSymbol",
    "when": "inQuickOpen"
  },

  {
    "key": "ctrl+n",
    "command": "editor.action.triggerSuggest",
    "when": "textInputFocus && !suggestWidgetVisible"
  },
  {
    "key": "ctrl+p",
    "command": "selectPrevSuggestion",
    "when": "suggestWidgetVisible"
  },
  {
    "key": "ctrl+n",
    "command": "selectNextSuggestion",
    "when": "suggestWidgetVisible"
  },
  {
    "key": "escape",
    "command": "hideSuggestWidget",
    "when": "suggestWidgetVisible && textInputFocus"
  },
  {
    "key": "escape",
    "command": "editor.action.inlineSuggest.hide",
    "when": "inlineSuggestionVisible"
  },
  {
    "key": "escape",
    "command": "extension.vim_escape"
  },
  {
    "key": "ctrl+y",
    "command": "terminal.focus"
  },
  {
    "key": "ctrl+y",
    "command": "workbench.action.focusActiveEditorGroup",
    "when": "terminalFocus"
  },
  {
    "key": "ctrl+p",
    "command": "-workbench.action.quickOpen",
    "when": "terminalFocus"
  },

  {
    "key": "space m",
    "command": "workbench.action.minimizeOtherEditors",
    "when": "editorTextFocus && vim.active && !inDebugRepl && vim.mode != 'Insert'"
  },
  {
    "key": "space d",
    "command": "editor.action.revealDefinitionAside",
    "when": "editorTextFocus && vim.active && !inDebugRepl && vim.mode != 'Insert'"
  },
  {
    "key": "space f",
    "command": "editor.action.revealDefinition",
    "when": "editorTextFocus && vim.active && !inDebugRepl && vim.mode != 'Insert'"
  },
  {
    "key": "space g",
    "command": "editor.action.showHover",
    "when": "editorTextFocus && vim.active && !inDebugRepl && vim.mode != 'Insert'"
  },
  {
    "key": "space s",
    "command": "github.copilot.generate",
    "when": "editorTextFocus && vim.active && !inDebugRepl && vim.mode != 'Insert'"
  },
  {
    "key": "space q",
    "command": "editor.action.quickFix",
    "when": "editorTextFocus && vim.active && !inDebugRepl && vim.mode != 'Insert'"
  },
  {
    "key": "space r",
    "command": "editor.action.rename",
    "when": "editorTextFocus && vim.active && !inDebugRepl && vim.mode != 'Insert' && editorHasRenameProvider && !editorReadonly"
  },
  {
    "key": "space e",
    "command": "editor.action.inlineSuggest.trigger",
    "when": "editorTextFocus && vim.active && !inDebugRepl && vim.mode != 'Insert' && config.github.copilot.inlineSuggest.enable && !editorHasSelection && !inlineSuggestionVisible"
  },
  {
    "key": "tab",
    "command": "tab",
    "when": "editorTextFocus && !editorReadonly && !inlineSuggestionVisible && !suggestWidgetVisible && vim.mode == 'Insert'"
  },
  {
    "key": "tab",
    "command": "editor.action.inlineSuggest.commit",
    "when": "editorTextFocus && !editorReadonly && inlineSuggestionVisible"
  }

