[user]
  name = tett23
  email = tett23@gmail.com
[core]
  excludesfile = ~/.gitignore_global
  autocrlf = input
  editor = nvim
  pager = delta
  filemode = false
  quotepath = false
[pager]
    diff = delta
    log = delta
    reflog = delta
    show = delta
[interactive]
  diffFilter = delta --color-only
[init]
  defaultBranch = main
[alias]
  tr = log --graph --pretty='format:%C(yellow)%h%Creset %s %Cgreen(%an)%Creset %Cred%d%Creset'
  co = checkout
  ci = commit
  cia = commit -a
  df = diff --ignore-space-change
  dfc = diff --cached --ignore-space-change
  dfp = !GIT_PAGER=less git diff
  st = status --short
  wd = diff --word-diff
  ld = log --stat -p
  cl = commit -av
  lgraph = log --oneline --graph --decorate --all
  lg = log --oneline --graph --decorate --all
  oneline = log --pretty=oneline
  logg = log --stat --pretty=format:'%Cblue%h %Cgreen%ar %Cred%an %Creset%s %Cred%d'
  lgraph2 = log --graph --date-order --pretty=format:'%Cblue%h %Cgreen%ci %Cred%an %Cblue%m %Creset%s %Cred%d'
  gr = grep -n -c --color -p
  br = branch
  bra = branch -a
  brm = branch -m
  cob = checkout -b
  lop = log -p --ignore-space-change
  delete-merged-branches = !git branch --merged | grep -v \\* | xargs -I % git branch -d %
  lsf = ls-files
  today = log --since=midnight --author='$(git config user.name)' --oneline
  adp = add -p
  cp = cherry-pick

[log]
  date = local
[merge]
  tool = vimdiff
  conflictstyle = diff3
[branch "master"]
  rebase = true
[branch]
  autosetuprebase = always
[difftool]
  prompt = false
[diff]
  tool = vimdiff
  colorMoved = default
[mergetool]
  prompt = true
[grep]
  lineNumbers = true
[push]
  default = tracking
[pull]
  rebase = true

[delta]
  hyperlinks = true
  hyperlinks-file-link-format = "vscode://file/{path}:{line}"
  side-by-side = true
  line-numbers = true
  navigate = true
  light = false
  true-color = always

[color]
  ui = auto
[color "branch"]
  current = red
  local = yellow
  remote = magenta
[color "diff"]
  whitespace = white reverse
[color "status"]
  added = yellow
  changed = green
  untracked = cyan reverse
  branch = magenta

[ghq]
  root = ~/repositories/src
